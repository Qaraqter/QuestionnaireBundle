{% block multiple_choice_question_label %}
{% spaceless %}
    <div class="panel-heading">
	    <div class="inner-heading mainTitle">
			<div class="inner-title">{{ label|trans({}, translation_domain) }}</div>
		</div>
		<div class="inner-heading subTitle text-muted">
			<div class="inner-title">{{ description|trans({}, translation_domain) }}</div>
		</div>
	</div>
{% endspaceless %}
{% endblock multiple_choice_question_label %}

{% block multiple_choice_question_widget %}
{% spaceless %}
    <ul {{ block('widget_container_attributes') }}>
    {% for child in form %}
        <li>
            {{ form_widget(child) }}
            {{ form_label(child) }}
        </li>
    {% endfor %}
    </ul>
{% endspaceless %}
{% endblock multiple_choice_question_widget %}
