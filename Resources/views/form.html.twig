{% block body_widget %}
{% spaceless %}
    <div {{ block('widget_container_attributes') }}>
        {% if form.parent is empty %}
            {{ form_errors(form) }}
        {% endif %}
        {{ block('form_rows') }}
        {{ form_rest(form) }}
    </div>
{% endspaceless %}
{% endblock body_widget %}

{% block footer_widget %}
{% spaceless %}
    <div {{ block('widget_container_attributes') }}>
        {% if form.parent is empty %}
            {{ form_errors(form) }}
        {% endif %}
        {{ block('form_rows') }}
        {{ form_rest(form) }}
    </div>
{% endspaceless %}
{% endblock footer_widget %}

{% block form %}
{% spaceless %}
    {% import 'bootstrap/bootstrap.functions.html.twig' as bootstrap %}
    {{ form_start(form, { 'attr': { 'id': 'questionnaireForm' }}) }}
        <article id="questionnaire" class="question panel panel-default">
            {{ form_widget(form) }}
        </article>
    {{ form_end(form) }}
{% endspaceless %}
{% endblock form %}

{% block form_intro %}
{% spaceless %}
    <div class="answers">
        {% if introtext is defined %}
            {% include 'layout/question.intro.text.html.twig' %}
        {% endif %}
        {{ form_widget(form) }}
    </div>
{% endspaceless %}
{% endblock form_intro %}

{% block form_row %}
{% spaceless %}
    {% if container %}<div class="panel panel-default">{% endif %}
        {{ form_label(form) }}
        {{ form_errors(form) }}
        {{ form_widget(form) }}
    {% if container %}</div>{% endif %}
{% endspaceless %}
{% endblock form_row %}

{% block form_widget_compound %}
{% spaceless %}
    {% if container %}<div {{ block('widget_container_attributes') }}>{% endif %}
        {% if form.parent is empty %}
            {{ form_errors(form) }}
        {% endif %}
        {{ block('form_rows') }}
        {{ form_rest(form) }}
    {% if container %}</div>{% endif %}
{% endspaceless %}
{% endblock form_widget_compound %}

{% block group_label %}
{% spaceless %}
    <div class="panel-heading">
        <div class="inner-heading mainTitle">
            <div class="inner-title">{{ label|trans({}, translation_domain) }}</div>
        </div>
        <div class="inner-heading subTitle text-muted">
            <div class="inner-title">{{ description|trans({}, translation_domain) }}</div>
        </div>
    </div>
{% endspaceless %}
{% endblock group_label %}

{% block group_widget %}
{% spaceless %}
    <table {{ block('widget_container_attributes') }}>
        <thead>
            <tr>
                <th class="title">&nbsp;</th>
                {% for answer in form|first %}
                    <th data-value="{{ answer.vars.value }}">{{ answer.vars.label }}</th>
                {% endfor %}
            </tr>
        </thead>
        <tbody>
    {% for child in form %}
                <tr class="input-row">
                    <td class="title">{{ child.vars.label|trans({}, translation_domain) }}</td>
                    {% for answer in child %}
                        <td><label>{{ form_widget(answer) }}</label></td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endspaceless %}
{% endblock group_widget %}

{% block header_widget %}
{% spaceless %}
    {% import 'bootstrap/bootstrap.functions.html.twig' as bootstrap %}
    {% set category = {title: 'category.title', description: 'category.description'} %}
    <div class="panel-heading">
        <div class="panel-title">
            {% if category.title is defined %}
                {{ bootstrap.title(category.title, { 'icon': 'question-circle', 'subtitle': true  }) }}
            {% endif %}
            {% if category.description is defined %}
                {{ bootstrap.title(category.description, { 'subtitle': true }) }}
            {% endif %}
        </div>
    </div>
{% endspaceless %}
{% endblock header_widget %}

{% block multiple_choice_label %}
{% spaceless %}
