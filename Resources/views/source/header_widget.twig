{% block header_widget %}
{% spaceless %}
    {% import 'bootstrap/bootstrap.functions.html.twig' as bootstrap %}
    {% set category = {title: 'category.title', description: 'category.description'} %}
    <div class="panel-heading">
        <div class="panel-title">
            {% if category.title is defined %}
                {{ bootstrap.title(category.title, { 'icon': 'question-circle', 'subtitle': true  }) }}
            {% endif %}
            {% if category.description is defined %}
                {{ bootstrap.title(category.description, { 'subtitle': true }) }}
            {% endif %}
        </div>
    </div>
{% endspaceless %}
{% endblock header_widget %}
